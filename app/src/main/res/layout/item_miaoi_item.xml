<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/f_img"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/mine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text_tui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1231"
        android:textSize="20sp"
        android:textColor="#FF3366"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/f_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_yuan"/>

    <TextView
        android:id="@+id/text_yuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1231"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/text_tui"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>